#!/usr/bin/env zsh

[ ! -d "${APPDIR}/brew" ] && exit 1

brewfile="${DOTS}/@$(uname).Brewfile"

#: Update Brewfile
cd $(mktemp -d)
brew bundle dump --describe --no-upgrade --all
mv Brewfile "${brewfile}"

#: Push updates to .files
cd ${DOTS}
git add ${brewfile}
git commit -m "ðŸ“Œ Update Brewfile for $(uname)"
git push
